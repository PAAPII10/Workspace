{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true
  },
  "references": [
    { "path": "./libs/types" },
    { "path": "./libs/utils" },
    { "path": "./libs/schemas" },
    { "path": "./libs/components" },
    { "path": "./domains/users" },
    { "path": "./domains/products" },
    { "path": "./packages/sdk" },
    { "path": "./apps/backend" },
    { "path": "./apps/web" },
    { "path": "./apps/admin" }
  ]
}
