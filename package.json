{
  "name": "arvasit-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Arvasit PNPM monorepo workspace with apps, libs, domains, and packages",
  "workspaces": [
    "apps/*",
    "domains/*",
    "libs/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "run:ci": "git commit --allow-empty -m \"full-ci\" && git push",
    "run:script": "npx ts-node scripts/workspace/run-script.ts",
    "clean:all": "pnpm -r clean:all",
    "compile:all": "pnpm -r compile",
    "build:all": "pnpm run:script all build",
    "lint:all": "pnpm -r lint",
    "format:check:all": "pnpm -r format:check",
    "format:write:all": "pnpm -r format:write",
    "test:all": "pnpm run:script all test",
    "circular-deps:check:all": "pnpm run:script all circular-deps:check",
    "libs:compile": "pnpm run:script libs compile",
    "libs:build": "pnpm run:script libs build",
    "libs:start": "pnpm run:script libs start --parallel",
    "libs:lint": "pnpm run:script libs lint",
    "libs:format:check": "pnpm run:script libs format:check",
    "libs:format:write": "pnpm run:script libs format:write",
    "libs:test": "pnpm run:script libs test",
    "libs:clean": "pnpm run:script libs clean:all",
    "domains:compile": "pnpm run:script domains compile",
    "domains:build": "pnpm run:script domains build",
    "domains:start": "pnpm run:script domains start --parallel",
    "domains:lint": "pnpm run:script domains lint",
    "domains:format:check": "pnpm run:script domains format:check",
    "domains:format:write": "pnpm run:script domains format:write",
    "domains:test": "pnpm run:script domains test",
    "domains:clean": "pnpm run:script domains clean:all",
    "packages:compile": "pnpm run:script packages compile",
    "packages:build": "pnpm run:script packages build",
    "packages:start": "pnpm run:script packages start --parallel",
    "packages:lint": "pnpm run:script packages lint",
    "packages:format:check": "pnpm run:script packages format:check",
    "packages:format:write": "pnpm run:script packages format:write",
    "packages:test": "pnpm run:script packages test",
    "packages:clean": "pnpm run:script packages clean:all",
    "apps:compile": "pnpm run:script apps compile",
    "apps:build": "pnpm run:script apps build",
    "apps:start": "pnpm run:script apps start --parallel",
    "apps:start:dev": "pnpm run:script apps start:dev --parallel",
    "apps:lint": "pnpm run:script apps lint",
    "apps:format:check": "pnpm run:script apps format:check",
    "apps:format:write": "pnpm run:script apps format:write",
    "apps:test": "pnpm run:script apps test",
    "apps:circular-deps:check": "pnpm run:script apps circular-deps:check",
    "admin:compile": "pnpm --filter='@arvasit/admin' compile",
    "admin:build": "pnpm --filter='@arvasit/admin' build",
    "admin:lint": "pnpm --filter='@arvasit/admin' lint",
    "admin:test": "pnpm --filter='@arvasit/admin' test",
    "admin:circular-deps:check": "pnpm --filter='@arvasit/admin' circular-deps:check",
    "admin:start:dev": "pnpm --filter='@arvasit/admin' start:dev",
    "web:compile": "pnpm --filter='@arvasit/web' compile",
    "web:build": "pnpm --filter='@arvasit/web' build",
    "web:lint": "pnpm --filter='@arvasit/web' lint",
    "web:circular-deps:check": "pnpm --filter='@arvasit/web' circular-deps:check",
    "web:start:dev": "pnpm --filter='@arvasit/web' start:dev",
    "backend:compile": "pnpm --filter='@arvasit/backend' compile",
    "backend:build": "pnpm --filter='@arvasit/backend' build",
    "backend:lint": "pnpm --filter='@arvasit/backend' lint",
    "backend:test": "pnpm --filter='@arvasit/backend' test",
    "backend:circular-deps:check": "pnpm --filter='@arvasit/backend' circular-deps:check",
    "backend:start:dev": "pnpm --filter='@arvasit/backend' start:dev",
    "storybook": "pnpm --filter='@arvasit/components' storybook",
    "build-storybook": "pnpm --filter='@arvasit/components' build-storybook",
    "generate-exports": "ts-node scripts/workspace/generate-library-exports.ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "madge": "^7.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
