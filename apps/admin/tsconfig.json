{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@arvasit/types": [
        "../../libs/types/src"
      ],
      "@arvasit/types/*": [
        "../../libs/types/src/*"
      ],
      "@arvasit/utils": [
        "../../libs/utils/src"
      ],
      "@arvasit/utils/*": [
        "../../libs/utils/src/*"
      ],
      "@arvasit/components": [
        "../../libs/components/src"
      ],
      "@arvasit/components/*": [
        "../../libs/components/src/*"
      ],
      "@arvasit/schemas": [
        "../../libs/schemas/src"
      ],
      "@arvasit/schemas/*": [
        "../../libs/schemas/src/*"
      ],
      "@arvasit/sdk": [
        "../../packages/sdk/src"
      ],
      "@arvasit/sdk/*": [
        "../../packages/sdk/src/*"
      ]
    },
    "incremental": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
