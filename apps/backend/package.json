{
  "name": "@arvasit/backend",
  "version": "1.0.0",
  "private": true,
  "description": "NestJS backend application",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "node dist/main",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"{src,apps,libs,test}/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "circular-deps:check": "madge --circular --ts-config ./tsconfig.json --extensions ts,tsx src/",
    "clean:all": "rm -rf node_modules && rm -rf pnpm-lock.yaml && rm -rf dist .turbo"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@arvasit/types": "workspace:*",
    "@arvasit/schemas": "workspace:*",
    "@arvasit/users": "workspace:*",
    "@arvasit/products": "workspace:*",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@arvasit/types": "workspace:*",
    "@arvasit/schemas": "workspace:*",
    "@arvasit/users": "workspace:*",
    "@arvasit/products": "workspace:*",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "madge": "^7.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
