{
  "name": "@arvasit/sdk",
  "version": "1.0.0",
  "description": "API client SDK for consuming backend services",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "build": "tsc --build ./tsconfig.build.json",
    "start": "pnpm build --watch",
    "lint": "eslint --fix",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:write": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "clean:all": "rm -rf node_modules && rm -rf pnpm-lock.yaml && rm -rf dist .turbo",
    "clean:build": "rm -rf dist tsconfig.build.tsbuildinfo",
    "prebuild": "pnpm clean:build"
  },
  "dependencies": {
    "@arvasit/types": "workspace:*",
    "@arvasit/schemas": "workspace:*",
    "@arvasit/users": "workspace:*",
    "@arvasit/products": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  }
}
