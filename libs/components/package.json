{
  "name": "@arvasit/components",
  "version": "1.0.0",
  "description": "Shared React component library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "require": "./dist/utils.js",
      "import": "./dist/utils.js"
    }
  },
  "scripts": {
    "compile": "tsc",
    "build": "tsup",
    "start": "pnpm build --watch",
    "lint": "eslint --fix",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:write": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "clean:all": "rm -rf node_modules && rm -rf pnpm-lock.yaml && rm -rf dist",
    "clean:build": "rm -rf dist tsconfig.build.tsbuildinfo",
    "generate-exports": "cd ../../ && npx ts-node scripts/workspace/generate-library-exports.ts components",
    "prebuild": "pnpm clean:build && pnpm generate-exports",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@arvasit/types": "workspace:*",
    "@arvasit/utils": "workspace:*",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^7.6.17",
    "@storybook/testing-library": "^0.2.2",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.17",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "files": [
    "dist"
  ]
}
