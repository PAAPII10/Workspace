{
  "name": "@arvasit/schemas",
  "version": "1.0.0",
  "description": "Global validation schemas using Zod",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "compile": "tsc",
    "build": "tsc --build ./tsconfig.build.json",
    "start": "pnpm build --watch",
    "lint": "eslint --fix",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:write": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "clean:all": "rm -rf node_modules && rm -rf pnpm-lock.yaml && rm -rf dist .turbo",
    "clean:build": "rm -rf dist tsconfig.build.tsbuildinfo",
    "generate-exports": "cd ../../ && npx ts-node scripts/workspace/generate-library-exports.ts schemas",
    "prebuild": "pnpm clean:build && pnpm generate-exports"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "files": [
    "dist"
  ]
}
